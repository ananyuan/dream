<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.dream.dao.ArticleDao">
    <select id="countAll" resultType="int">  
        select count(*) c from dream_article;
    </select>

    <insert id="insert" parameterType="com.dream.model.Article">  
        insert into dream_article(id, title,content,chanid,atime,summary,localurl, imgids, sortnum) values(#{id},#{title},#{content},#{chanId},#{atime},#{summary},#{localurl},#{imgids}, #{sortnum})
    </insert>
    
    <update id="update" parameterType="com.dream.model.Article">
        update dream_article set title=#{title},content=#{content},chanid=#{chanId}, imgids=#{imgids}, sortnum=#{sortnum} where id=#{id}
    </update>
    
    <delete id="delete" parameterType="String">  
        delete from dream_article where id=#{id}
    </delete>
    
    <select id="findArticle" parameterType="String" resultType="com.dream.model.Article">
        select * from dream_article where id=#{id}
    </select>

    <select id="findNewArticles" parameterType="String" resultType="com.dream.model.Article">  
        select id,title,atime,summary,localurl,imgids,sortnum from dream_article where atime > #{atime} order by sortnum, atime desc
    </select>
    
    <select id="findArticles" resultType="com.dream.model.Article" parameterType="com.dream.base.Page">  
        select id,title,chanid,atime,summary,localurl,imgids,sortnum from dream_article order by sortnum, atime desc
    </select>

    <select id="findArticlesByChannelId" resultType="com.dream.model.Article" parameterType="com.dream.base.Page">
        select id,title,chanid,atime,summary,localurl,sortnum from dream_article where chanid=#{chanId} order by sortnum, atime desc
    </select>
</mapper>